generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Shortlink {
  id        Int       @id @default(autoincrement())
  uuid      String    @default(uuid())
  slug      String    @unique
  url       String
  createdAt DateTime  @default(now())
}

model LinkStats {
  id           Int      @id @default(autoincrement())
  linkId       Int
  createdAt    DateTime @default(now())
  userAgent    String?
  ipAddress    String?
}
